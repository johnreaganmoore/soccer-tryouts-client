{{team-map teams=teams}}
<div class="tryout-list-container content-body-container">
  {{#each teams as |team|}}

    <div class="tryout">
      <div class="league-logo">
        {{#link-to "leagues"}}
          <img src="{{team.league.logo}}" alt="{{team.league.name}} Logo">
        {{/link-to}}
      </div>
      <div class="team-logo">
        <img src="{{team.logo}}" alt="{{team.name}} Logo">
      </div>
      <div class="tryout-content">
        {{#link-to "teams.show" team}}
          <h3>{{team.name}}</h3>
        {{/link-to}}
        <div>
          <!-- In the future add conditional logic. Cash for pro leagues heart for amateur. and add and the word indoor after the level if an indoor league. -->
          {{#if team.league.isPro}}
            💵 &nbsp;&nbsp;{{team.league.level}}
          {{else}}
            ❤️ &nbsp;&nbsp;{{team.league.level}}
          {{/if}}
        </div>
        <div class="dates">
          <div>🗺 &nbsp;&nbsp;{{team.address_1}}</div>
          {{#if team.address_2}}
            <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; {{team.address_2}}</div>
          {{/if}}
          <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; {{team.locality}}, {{team.region}}, {{team.zip}}</div>
        </div>
        <div class="location">
          🔗 &nbsp;&nbsp;<a href="{{team.website}}">Website</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>

{{outlet}}
